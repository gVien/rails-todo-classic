<th> Tasks </th>
<th> Completed? </th>

<% @tasks.each do |task| %>
<tr>
  <td><%= task.task %></td>
  <td><%= task.complete %></td>
  <td><%= link_to "Edit this task", edit_task_path(task) %></td>
  <td><%= link_to "Delete this task", task_path(task),
                                    method: :delete,
                                    data: {confirm: "Are you sure?"} %></td>
  <td><%= button_to "Complete", task_path(task) %></td>
</tr>
<% end %>
